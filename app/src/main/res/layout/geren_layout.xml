<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/geren_login"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@mipmap/denglunormal" />

        <ImageView
            android:id="@+id/user_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_below="@+id/geren_login">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geren_wait_pay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wait_pay"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/geren_text_daifukuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="待付款" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geren_daifahuo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wait_send_good"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/geren_text_daifahuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="待发货" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geren_daishouhuo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wait_pay"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/geren_text_daishouhuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="待收货" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geren_daipingjia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wait_evaluate"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/geren_text_daipingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="待评价" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geren_tuikuan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wait_refund"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/geren_text_tuikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="代付款" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_order_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="我的订单"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_invite_gift_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="邀请有礼"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_face_test_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="刷脸测尺寸"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/pledge"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="兑换专区"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_coupon_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="我的现金券"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_lottery_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="我的抽奖单"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_collection_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="我收藏的产品"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/personal_center_contact_service_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="联系客服"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

</LinearLayout>
