<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_search"
                    android:background="@android:color/white"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="请输入商品名称"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fenlei_mianmo"
                    android:layout_width="250dp"
                    android:layout_height="400dp"
                    android:focusable="true"
                    android:src="@mipmap/classify_facial_mask"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="300dp"
                    android:orientation="vertical">
                    <GridView
                        android:id="@+id/fenlei_gridView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:numColumns="2"/>
                    <ImageView
                        android:id="@+id/fenlei_grid_shihuitaozhuang"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@mipmap/shihuitaozhuang"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"/>

            <RelativeLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/angongxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:text="按功效"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bolangxian"
                    android:layout_toLeftOf="@+id/angongxiao"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/angongxiao"
                    android:src="@mipmap/bolangxian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/angongxiao"
                    android:layout_centerHorizontal="true"
                    android:text="美丽从选对产品开始"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:background="@android:color/white">
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>
                <ImageView
                    android:id="@+id/fenlei_bushuibaoshi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_height="match_parent"
                    android:src="@mipmap/classify_hydrating"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>
                <ImageView
                    android:id="@+id/fenlei_shuhuanxinfu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_height="match_parent"
                    android:src="@mipmap/classify_soothing"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>
                <ImageView
                    android:id="@+id/fenlei_kongyouqudou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_height="match_parent"
                    android:src="@mipmap/classify_control_oil"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>
                <ImageView
                    android:id="@+id/fenlei_meibaitiliang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_height="match_parent"
                    android:src="@mipmap/classify_whitening"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>
                <ImageView
                    android:id="@+id/fenlei_jinzhikangzhou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:src="@mipmap/classify_firming"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="13dp"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/anfuzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:text="按肤质"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bolangxian"
                    android:layout_toLeftOf="@+id/anfuzhi"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/anfuzhi"
                    android:src="@mipmap/bolangxian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/anfuzhi"
                    android:layout_centerHorizontal="true"
                    android:text="适合自己才是最好的"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/type_fz_huihe"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#DEDEB9"
                        android:text="#混合性肤质#"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/type_fz_zhongxing"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#EED4C2"
                        android:text="#中性肤质#"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/type_fz_ganxing"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#D4D7F7"
                        android:text="#干性肤质#"
                        android:textSize="22sp" />


                    <Button
                        android:id="@+id/type_fz_youxing"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#D1E1C3"
                        android:text="#油性肤质#"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/type_fz_doudou"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#F1D2CB"
                        android:text="#痘痘肤质#"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/type_fz_mingan"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#BFF1EC"
                        android:text="#敏感肤质#"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/mingxingchanpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:text="明星产品"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bolangxian"
                    android:layout_toLeftOf="@+id/mingxingchanpin"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mingxingchanpin"
                    android:src="@mipmap/bolangxian"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="7dp"
                    android:layout_height="13dp"/>
                <GridView
                    android:id="@+id/fenlei_mingxingchanpin_grid"
                    android:layout_width="match_parent"
                    android:layout_height="1430dp"
                    android:numColumns="2"/>
                <View
                    android:layout_width="7dp"
                    android:layout_height="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
